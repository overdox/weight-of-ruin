{
  "name": "weight-of-ruin",
  "version": "0.1.0",
  "description": "The Weight of Ruin system for Foundry VTT - A grimdark medieval fantasy RPG",
  "scripts": {
    "build": "sass src/scss/weight-of-ruin.scss css/weight-of-ruin.css --style=expanded --no-source-map",
    "watch": "sass src/scss/weight-of-ruin.scss css/weight-of-ruin.css --style=expanded --source-map --watch",
    "build:release": "npm run build && node scripts/build-release.js",
    "version": "node scripts/sync-version.js"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "The Weight of Ruin Development Team",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "sass": "^1.53.0"
  }
}
