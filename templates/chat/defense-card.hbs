{{!-- Defense Roll Chat Card --}}
<div class="wor">
  <div class="defense-card">
    {{!-- Header --}}
    <div class="card-header">
      <img src="{{actor.img}}" class="actor-portrait" alt="{{actor.name}}" />
      <div class="header-info">
        <h3 class="defense-roll-title">{{localize "WOR.Defense.Title"}}</h3>
        <span class="actor-name">{{actor.name}}</span>
      </div>
    </div>

    {{!-- Pool Breakdown --}}
    <div class="pool-breakdown">
      <div class="pool-component base">
        <span class="component-label">{{localize "WOR.Derived.Reflex.label"}}:</span>
        <span class="component-value">{{poolData.reflex}}</span>
      </div>
      {{#if buyLabel}}
      <div class="pool-component buy">
        <span class="component-label">+ {{buyLabel}}:</span>
        <span class="component-value">{{buyBonus}}</span>
      </div>
      {{/if}}
      {{#if (ne poolData.modifier 0)}}
      <div class="pool-component modifier">
        <span class="component-label">+ {{localize "WOR.Roll.Modifier"}}:</span>
        <span class="component-value">{{poolData.modifier}}</span>
      </div>
      {{/if}}
    </div>

    {{!-- Result Display --}}
    <div class="result-display">
      <span class="dice-pool">{{effectivePool}}d6</span>
      <span class="result-arrow">â†’</span>
      {{#if isAutoSuccess}}
      <span class="hits-count auto-success">
        <i class="fas fa-star"></i>
        {{localize "WOR.Fervor.AutoSuccess"}}
      </span>
      {{else}}
      <span class="hits-count">{{hits}} {{localize "WOR.Roll.Hits"}}</span>
      {{/if}}
    </div>

    {{!-- Dice Display --}}
    {{#unless isAutoSuccess}}
    {{#if diceDisplay}}
    <div class="dice-display">
      {{{diceDisplay}}}
    </div>
    {{/if}}
    {{/unless}}

    {{!-- Fervor Spent --}}
    {{#if fervorSpend}}
    {{#if (or fervorSpend.difficultyShift fervorSpend.bonusDice fervorSpend.autoSuccess fervorSpend.zeroPool)}}
    <div class="fervor-spent">
      <i class="fas fa-fire"></i>
      <span>{{localize "WOR.Fervor.Spent"}}:</span>
      {{#if fervorSpend.difficultyShift}}<span class="fervor-tag">{{localize "WOR.Fervor.DifficultyShift"}}</span>{{/if}}
      {{#if fervorSpend.bonusDice}}<span class="fervor-tag">{{localize "WOR.Fervor.BonusDice"}}</span>{{/if}}
      {{#if fervorSpend.autoSuccess}}<span class="fervor-tag">{{localize "WOR.Fervor.AutoSuccess"}}</span>{{/if}}
      {{#if fervorSpend.zeroPool}}<span class="fervor-tag">{{localize "WOR.Fervor.ZeroPool"}}</span>{{/if}}
    </div>
    {{/if}}
    {{/if}}
  </div>
</div>
