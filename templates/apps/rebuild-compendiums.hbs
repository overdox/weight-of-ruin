<div class="rebuild-compendiums-content">
  <div class="form-group">
    <p class="notes warning">
      <i class="fas fa-exclamation-triangle"></i>
      {{warning}}
    </p>
  </div>

  <div class="form-group">
    <p>{{localize "WOR.Settings.RebuildCompendiums.Description"}}</p>
  </div>

  <footer class="sheet-footer flexrow">
    <button type="button" data-action="cancel">
      <i class="fas fa-times"></i> {{localize "WOR.Common.Cancel"}}
    </button>
    <button type="button" data-action="rebuild" class="dialog-button">
      <i class="fas fa-sync"></i> {{localize "WOR.Settings.RebuildCompendiums.Button"}}
    </button>
  </footer>
</div>
