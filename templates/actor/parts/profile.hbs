<section class="profile-section">

  {{!-- Profile Sub-tabs Navigation --}}
  <nav class="profile-tabs">
    <a class="item {{#if (eq profileTab 'identity')}}active{{/if}}" data-tab="identity" data-group="profile">
      <i class="fas fa-id-card"></i>
      {{localize "AOA.Section.Identity"}}
    </a>
    <a class="item {{#if (eq profileTab 'passions')}}active{{/if}}" data-tab="passions" data-group="profile">
      <i class="fas fa-fire"></i>
      {{localize "AOA.Section.Passions"}}
    </a>
    <a class="item {{#if (eq profileTab 'advancement')}}active{{/if}}" data-tab="advancement" data-group="profile">
      <i class="fas fa-chart-line"></i>
      {{localize "AOA.Section.Advancement"}}
    </a>
    <a class="item {{#if (eq profileTab 'notes')}}active{{/if}}" data-tab="notes" data-group="profile">
      <i class="fas fa-book"></i>
      {{localize "AOA.Section.Notes"}}
    </a>
  </nav>

  {{!-- ============================================ --}}
  {{!-- IDENTITY TAB --}}
  {{!-- ============================================ --}}
  <div class="tab profile-tab-content {{#if (eq profileTab 'identity')}}active{{/if}}" data-tab="identity" data-group="profile">

    {{!-- Character Details Section --}}
    <div class="identity-details-section">
      <h3>{{localize "AOA.Section.CharacterDetails"}}</h3>
      <div class="identity-details-content">

        {{!-- Basic Info Row --}}
        <div class="identity-row">
          <div class="identity-field name-field">
            <label>{{localize "AOA.Common.Name"}}</label>
            {{#if isEditMode}}
            <input type="text" name="name" value="{{actor.name}}" />
            {{else}}
            <span class="identity-value">{{actor.name}}</span>
            {{/if}}
          </div>
          <div class="identity-field age-field">
            <label>{{localize "AOA.Identity.Age"}}</label>
            {{#if isEditMode}}
            <input type="number" name="system.identity.age" value="{{system.identity.age}}" min="0" />
            {{else}}
            <span class="identity-value">{{#if system.identity.age}}{{system.identity.age}}{{else}}â€”{{/if}}</span>
            {{/if}}
          </div>
        </div>

        {{!-- ============================================ --}}
        {{!-- LINEAGE (Expandable) --}}
        {{!-- ============================================ --}}
        <div class="identity-card {{#if items.lineage}}has-item{{/if}}" data-expand-type="lineage">
          <div class="identity-card-header" data-action="toggleExpand">
            <div class="card-header-left">
              <i class="fas fa-dna"></i>
              <span class="card-label">{{localize "AOA.ItemType.Lineage"}}</span>
            </div>
            <div class="card-header-right">
              {{#if items.lineage}}
              <span class="card-value">{{items.lineage.name}}</span>
              <i class="fas fa-chevron-down expand-icon"></i>
              {{else}}
              <span class="card-value empty">{{localize "AOA.Common.NotSet"}}</span>
              {{/if}}
            </div>
          </div>
          {{#if items.lineage}}
          <div class="identity-card-details">
            {{!-- Description --}}
            {{#if items.lineage.system.description}}
            <div class="detail-section">
              <div class="detail-content prose">{{{items.lineage.system.description}}}</div>
            </div>
            {{/if}}

            {{!-- Attribute Modifiers --}}
            {{#if items.lineage.system.totalModifiers}}
            <div class="detail-section">
              <h4>{{localize "AOA.Lineage.AttributeModifiers"}}</h4>
              <div class="modifier-tags">
                {{#each items.lineage.system.attributeModifiers}}
                {{#if this}}
                <span class="modifier-tag {{#if (gt this 0)}}positive{{else}}negative{{/if}}">
                  {{#if (eq @key "any")}}{{localize "AOA.Attributes.Any"}}{{else}}{{localize (concat "AOA.Attributes." (capitalize @key))}}{{/if}} {{#if (gt this 0)}}+{{/if}}{{this}}
                </span>
                {{/if}}
                {{/each}}
              </div>
            </div>
            {{/if}}

            {{!-- Witchsight --}}
            {{#if items.lineage.system.startingWitchsight}}
            <div class="detail-section">
              <h4>{{localize "AOA.Attributes.Witchsight"}}</h4>
              <span class="witchsight-badge">
                <i class="fas fa-eye"></i> {{items.lineage.system.startingWitchsight}}
              </span>
            </div>
            {{/if}}

            {{!-- Traits --}}
            {{#if items.lineage.system.traits.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Lineage.Traits"}}</h4>
              <ul class="traits-list">
                {{#each items.lineage.system.traits}}
                <li class="trait-item">
                  <span class="trait-name">{{name}}</span>
                  {{#if description}}<p class="trait-description">{{{description}}}</p>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Physical Characteristics --}}
            {{#if items.lineage.system.physical}}
            <div class="detail-section">
              <h4>{{localize "AOA.Lineage.Physical"}}</h4>
              <div class="physical-details">
                {{#if items.lineage.system.physical.height}}<p><strong>{{localize "AOA.Lineage.Height"}}:</strong> {{items.lineage.system.physical.height}}</p>{{/if}}
                {{#if items.lineage.system.physical.build}}<p><strong>{{localize "AOA.Lineage.Build"}}:</strong> {{items.lineage.system.physical.build}}</p>{{/if}}
                {{#if items.lineage.system.physical.distinctiveFeatures}}<p><strong>{{localize "AOA.Lineage.Features"}}:</strong> {{items.lineage.system.physical.distinctiveFeatures}}</p>{{/if}}
              </div>
            </div>
            {{/if}}

            {{!-- Lifespan --}}
            {{#if items.lineage.system.lifespan}}
            <div class="detail-section">
              <h4>{{localize "AOA.Lineage.Lifespan"}}</h4>
              <p>{{localize "AOA.Lineage.Average"}}: {{items.lineage.system.lifespan.average}} | {{localize "AOA.Lineage.Maximum"}}: {{items.lineage.system.lifespan.maximum}}</p>
            </div>
            {{/if}}

            {{!-- Culture --}}
            {{#if items.lineage.system.culture}}
            <div class="detail-section">
              <h4>{{localize "AOA.Lineage.Culture"}}</h4>
              <div class="detail-content prose">{{{items.lineage.system.culture}}}</div>
            </div>
            {{/if}}
          </div>
          {{/if}}
        </div>

        {{!-- ============================================ --}}
        {{!-- ARCHETYPE (Expandable) --}}
        {{!-- ============================================ --}}
        <div class="identity-card {{#if items.archetype}}has-item{{/if}}" data-expand-type="archetype">
          <div class="identity-card-header" data-action="toggleExpand">
            <div class="card-header-left">
              <i class="fas fa-chess-knight"></i>
              <span class="card-label">{{localize "AOA.ItemType.Archetype"}}</span>
            </div>
            <div class="card-header-right">
              {{#if items.archetype}}
              <span class="card-value">
                {{items.archetype.name}}
                {{#if system.identity.calling}}<span class="calling-label">({{system.identity.calling}})</span>{{/if}}
              </span>
              <i class="fas fa-chevron-down expand-icon"></i>
              {{else}}
              <span class="card-value empty">{{localize "AOA.Common.NotSet"}}</span>
              {{/if}}
            </div>
          </div>
          {{#if items.archetype}}
          <div class="identity-card-details">
            {{!-- Description --}}
            {{#if items.archetype.system.description}}
            <div class="detail-section">
              <div class="detail-content prose">{{{items.archetype.system.description}}}</div>
            </div>
            {{/if}}

            {{!-- Attribute Bonuses --}}
            {{#if items.archetype.system.totalBonuses}}
            <div class="detail-section">
              <h4>{{localize "AOA.Archetype.AttributeBonuses"}}</h4>
              <div class="modifier-tags">
                {{#each items.archetype.system.attributeBonuses}}
                {{#if this}}
                <span class="modifier-tag positive">
                  {{localize (concat "AOA.Attributes." (capitalize @key))}} +{{this}}
                </span>
                {{/if}}
                {{/each}}
              </div>
            </div>
            {{/if}}

            {{!-- Witchsight --}}
            {{#if items.archetype.system.startingWitchsight}}
            <div class="detail-section">
              <h4>{{localize "AOA.Attributes.Witchsight"}}</h4>
              <span class="witchsight-badge">
                <i class="fas fa-eye"></i> {{items.archetype.system.startingWitchsight}}
              </span>
            </div>
            {{/if}}

            {{!-- Role Descriptions --}}
            {{#if items.archetype.system.role}}
            <div class="detail-section">
              <h4>{{localize "AOA.Archetype.Role"}}</h4>
              <div class="role-descriptions">
                {{#if items.archetype.system.role.combat}}<p><strong>{{localize "AOA.Archetype.RoleCombat"}}:</strong> {{items.archetype.system.role.combat}}</p>{{/if}}
                {{#if items.archetype.system.role.exploration}}<p><strong>{{localize "AOA.Archetype.RoleExploration"}}:</strong> {{items.archetype.system.role.exploration}}</p>{{/if}}
                {{#if items.archetype.system.role.social}}<p><strong>{{localize "AOA.Archetype.RoleSocial"}}:</strong> {{items.archetype.system.role.social}}</p>{{/if}}
                {{#if items.archetype.system.role.magic}}<p><strong>{{localize "AOA.Archetype.RoleMagic"}}:</strong> {{items.archetype.system.role.magic}}</p>{{/if}}
              </div>
            </div>
            {{/if}}

            {{!-- Starting Talents --}}
            {{#if items.archetype.system.startingTalents.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Archetype.StartingTalents"}}</h4>
              <ul class="talents-list">
                {{#each items.archetype.system.startingTalents}}
                <li class="talent-item">
                  <span class="talent-name">{{name}}</span>
                  {{#if rank}}<span class="talent-rank">{{localize "AOA.Common.Rank"}} {{rank}}</span>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Suggested Skills --}}
            {{#if items.archetype.system.suggestedSkills.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Archetype.SuggestedSkills"}}</h4>
              <div class="skill-tags">
                {{#each items.archetype.system.suggestedSkills}}
                <span class="skill-tag">{{this}}</span>
                {{/each}}
              </div>
            </div>
            {{/if}}

            {{!-- Current Calling Details --}}
            {{#if system.identity.calling}}
            {{#with (lookup items.archetype.system.subtypes system.identity.calling)}}
            {{#if this}}
            <div class="detail-section calling-details">
              <h4>{{localize "AOA.Calling.Title"}}: {{../system.identity.calling}}</h4>
              {{#if description}}<p class="calling-description">{{{description}}}</p>{{/if}}
              {{#if features.length}}
              <ul class="features-list">
                {{#each features}}
                <li>{{this}}</li>
                {{/each}}
              </ul>
              {{/if}}
            </div>
            {{/if}}
            {{/with}}
            {{/if}}
          </div>
          {{/if}}
        </div>

        {{!-- ============================================ --}}
        {{!-- BACKGROUND (Expandable) --}}
        {{!-- ============================================ --}}
        <div class="identity-card {{#if items.background}}has-item{{/if}}" data-expand-type="background">
          <div class="identity-card-header" data-action="toggleExpand">
            <div class="card-header-left">
              <i class="fas fa-scroll"></i>
              <span class="card-label">{{localize "AOA.ItemType.Background"}}</span>
            </div>
            <div class="card-header-right">
              {{#if items.background}}
              <span class="card-value">{{items.background.name}}</span>
              <i class="fas fa-chevron-down expand-icon"></i>
              {{else}}
              <span class="card-value empty">{{localize "AOA.Common.NotSet"}}</span>
              {{/if}}
            </div>
          </div>
          {{#if items.background}}
          <div class="identity-card-details">
            {{!-- Description --}}
            {{#if items.background.system.description}}
            <div class="detail-section">
              <div class="detail-content prose">{{{items.background.system.description}}}</div>
            </div>
            {{/if}}

            {{!-- Economic Tier & Wealth --}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.EconomicTier"}}</h4>
              <p>
                <span class="tier-badge tier-{{items.background.system.economicTier}}">{{localize (concat "AOA.EconomicTier." (capitalize items.background.system.economicTier))}}</span>
                {{#if items.background.system.startingWealth}}
                <span class="wealth-range">{{items.background.system.startingWealth.min}} - {{items.background.system.startingWealth.max}} {{localize "AOA.Currency.Orin"}}</span>
                {{/if}}
              </p>
            </div>

            {{!-- Skill Grants --}}
            {{#if items.background.system.skillGrants.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.SkillGrants"}}</h4>
              <ul class="skill-grants-list">
                {{#each items.background.system.skillGrants}}
                <li class="skill-grant-item">
                  <span class="skill-name">{{skill}}</span>
                  <span class="skill-rank">+{{rank}}</span>
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Contact --}}
            {{#if items.background.system.contact}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.Contact"}}</h4>
              <p>
                {{#if items.background.system.contact.type}}<strong>{{items.background.system.contact.type}}</strong>{{/if}}
                {{#if items.background.system.contact.description}} - {{items.background.system.contact.description}}{{/if}}
              </p>
            </div>
            {{/if}}

            {{!-- Obligations --}}
            {{#if items.background.system.obligations.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.Obligations"}}</h4>
              <ul class="obligations-list">
                {{#each items.background.system.obligations}}
                <li class="obligation-item">
                  <span class="obligation-name">{{name}}</span>
                  {{#if description}}<p class="obligation-description">{{description}}</p>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Social Standing --}}
            {{#if items.background.system.socialStanding}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.SocialStanding"}}</h4>
              <p>{{items.background.system.socialStanding.rank}}{{#if items.background.system.socialStanding.notes}} - {{items.background.system.socialStanding.notes}}{{/if}}</p>
            </div>
            {{/if}}

            {{!-- Starting Equipment --}}
            {{#if items.background.system.startingEquipment.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Background.StartingEquipment"}}</h4>
              <ul class="equipment-list">
                {{#each items.background.system.startingEquipment}}
                <li>{{name}}{{#if (gt quantity 1)}} x{{quantity}}{{/if}}</li>
                {{/each}}
              </ul>
            </div>
            {{/if}}
          </div>
          {{/if}}
        </div>

        {{!-- ============================================ --}}
        {{!-- PATHWAY (Expandable) --}}
        {{!-- ============================================ --}}
        <div class="identity-card {{#if items.pathway}}has-item{{/if}}" data-expand-type="pathway">
          <div class="identity-card-header" data-action="toggleExpand">
            <div class="card-header-left">
              <i class="fas fa-road"></i>
              <span class="card-label">{{localize "AOA.ItemType.Pathway"}}</span>
            </div>
            <div class="card-header-right">
              {{#if items.pathway}}
              <span class="card-value">{{items.pathway.name}}</span>
              <i class="fas fa-chevron-down expand-icon"></i>
              {{else}}
              <span class="card-value empty">{{localize "AOA.Common.NotSet"}}</span>
              {{/if}}
            </div>
          </div>
          {{#if items.pathway}}
          <div class="identity-card-details">
            {{!-- Description --}}
            {{#if items.pathway.system.description}}
            <div class="detail-section">
              <div class="detail-content prose">{{{items.pathway.system.description}}}</div>
            </div>
            {{/if}}

            {{!-- Duration --}}
            {{#if items.pathway.system.duration}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.Duration"}}</h4>
              <p>{{items.pathway.system.duration.years}} {{localize "AOA.Common.Years"}}{{#if items.pathway.system.duration.description}} - {{items.pathway.system.duration.description}}{{/if}}</p>
            </div>
            {{/if}}

            {{!-- Skill Grants --}}
            {{#if items.pathway.system.skillGrants.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.SkillGrants"}}</h4>
              <ul class="skill-grants-list">
                {{#each items.pathway.system.skillGrants}}
                <li class="skill-grant-item">
                  <span class="skill-name">{{skill}}</span>
                  <span class="skill-rank">+{{rank}}</span>
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Contact --}}
            {{#if items.pathway.system.contact}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.Contact"}}</h4>
              <p>
                {{#if items.pathway.system.contact.type}}<strong>{{items.pathway.system.contact.type}}</strong>{{/if}}
                {{#if items.pathway.system.contact.description}} - {{items.pathway.system.contact.description}}{{/if}}
                {{#if items.pathway.system.contact.relationship}}<em>({{items.pathway.system.contact.relationship}})</em>{{/if}}
              </p>
            </div>
            {{/if}}

            {{!-- Narrative Hooks --}}
            {{#if items.pathway.system.narrativeHooks.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.NarrativeHooks"}}</h4>
              <ul class="hooks-list">
                {{#each items.pathway.system.narrativeHooks}}
                <li class="hook-item">
                  <span class="hook-name">{{name}}</span>
                  {{#if description}}<p class="hook-description">{{description}}</p>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Resources --}}
            {{#if items.pathway.system.resources}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.Resources"}}</h4>
              {{#if items.pathway.system.resources.wealthModifier}}
              <p><strong>{{localize "AOA.Pathway.WealthModifier"}}:</strong> {{items.pathway.system.resources.wealthModifier}}</p>
              {{/if}}
              {{#if items.pathway.system.resources.equipment.length}}
              <p><strong>{{localize "AOA.Pathway.Equipment"}}:</strong></p>
              <ul>
                {{#each items.pathway.system.resources.equipment}}
                <li>{{this}}</li>
                {{/each}}
              </ul>
              {{/if}}
              {{#if items.pathway.system.resources.privileges.length}}
              <p><strong>{{localize "AOA.Pathway.Privileges"}}:</strong></p>
              <ul>
                {{#each items.pathway.system.resources.privileges}}
                <li>{{this}}</li>
                {{/each}}
              </ul>
              {{/if}}
            </div>
            {{/if}}

            {{!-- Associated Archetypes --}}
            {{#if items.pathway.system.associatedArchetypes.length}}
            <div class="detail-section">
              <h4>{{localize "AOA.Pathway.AssociatedArchetypes"}}</h4>
              <div class="archetype-tags">
                {{#each items.pathway.system.associatedArchetypes}}
                <span class="archetype-tag">{{this}}</span>
                {{/each}}
              </div>
            </div>
            {{/if}}
          </div>
          {{/if}}
        </div>

      </div>
    </div>

    {{!-- Social Standing Section --}}
    <div class="social-standing-section">
      <h3>{{localize "AOA.Section.Social"}}</h3>
      <div class="social-standing-content">
        <div class="social-field tier">
          <label>{{localize "AOA.SocialStanding.Tier"}}</label>
          {{#if isEditMode}}
          <select name="system.socialStanding.tier">
            <option value="exalted" {{#if (eq system.socialStanding.tier "exalted")}}selected{{/if}}>{{localize "AOA.SocialStanding.Exalted"}}</option>
            <option value="ordained" {{#if (eq system.socialStanding.tier "ordained")}}selected{{/if}}>{{localize "AOA.SocialStanding.Ordained"}}</option>
            <option value="anointed" {{#if (eq system.socialStanding.tier "anointed")}}selected{{/if}}>{{localize "AOA.SocialStanding.Anointed"}}</option>
            <option value="penitent" {{#if (eq system.socialStanding.tier "penitent")}}selected{{/if}}>{{localize "AOA.SocialStanding.Penitent"}}</option>
            <option value="heretics" {{#if (eq system.socialStanding.tier "heretics")}}selected{{/if}}>{{localize "AOA.SocialStanding.Heretics"}}</option>
            <option value="outcast" {{#if (eq system.socialStanding.tier "outcast")}}selected{{/if}}>{{localize "AOA.SocialStanding.Outcast"}}</option>
          </select>
          {{else}}
          <span class="social-value standing-{{system.socialStanding.tier}}">{{localize (concat "AOA.SocialStanding." (capitalize system.socialStanding.tier))}}</span>
          {{/if}}
        </div>

        {{#if system.identity.province}}
        <div class="social-field province">
          <label>{{localize "AOA.Identity.Province"}}</label>
          <span class="social-value">{{system.identity.province}}</span>
        </div>
        {{/if}}
      </div>
    </div>

    {{!-- ============================================ --}}
    {{!-- LIFE EVENTS SECTION (Expandable) --}}
    {{!-- ============================================ --}}
    {{#if items.lifeEvents.length}}
    <div class="life-events-section">
      <h3>{{localize "AOA.Section.LifeEvents"}}</h3>
      <div class="life-events-list">
        {{#each items.lifeEvents}}
        <div class="identity-card life-event-card has-item" data-expand-type="lifeEvent" data-item-id="{{id}}">
          <div class="identity-card-header" data-action="toggleExpand">
            <div class="card-header-left">
              <i class="fas fa-star"></i>
              <span class="card-label">{{name}}</span>
              <span class="suit-badge suit-{{system.suit}}">{{localize (concat "AOA.LifeEvent.Suit." (capitalize system.suit))}}</span>
            </div>
            <div class="card-header-right">
              <i class="fas fa-chevron-down expand-icon"></i>
              <div class="event-controls">
                <a class="item-control" data-action="editItem" data-item-id="{{id}}" title="{{localize 'AOA.Common.Edit'}}">
                  <i class="fas fa-edit"></i>
                </a>
                <a class="item-control item-delete" data-action="deleteItem" data-item-id="{{id}}" title="{{localize 'AOA.Common.Delete'}}">
                  <i class="fas fa-trash"></i>
                </a>
              </div>
            </div>
          </div>
          <div class="identity-card-details">
            {{!-- Description --}}
            {{#if system.description}}
            <div class="detail-section">
              <div class="detail-content prose">{{{system.description}}}</div>
            </div>
            {{/if}}
            {{!-- Narrative Prompt (if different from description) --}}
            {{#if system.narrativePrompt}}
            <div class="detail-section narrative-prompt">
              <h4>{{localize "AOA.LifeEvent.NarrativePrompt"}}</h4>
              <div class="detail-content prose">{{{system.narrativePrompt}}}</div>
            </div>
            {{/if}}

            {{!-- Benefits --}}
            {{#if system.benefits.length}}
            <div class="detail-section benefits-section">
              <h4><i class="fas fa-plus-circle"></i> {{localize "AOA.LifeEvent.Benefits"}}</h4>
              <ul class="benefits-list">
                {{#each system.benefits}}
                <li class="benefit-item benefit-{{type}}">
                  <span class="benefit-type">{{localize (concat "AOA.LifeEvent.BenefitType." (capitalize type))}}</span>
                  {{#if target}}<span class="benefit-target">{{target}}</span>{{/if}}
                  {{#if value}}<span class="benefit-value">+{{value}}</span>{{/if}}
                  {{#if description}}<p class="benefit-description">{{description}}</p>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- Complications --}}
            {{#if system.complications.length}}
            <div class="detail-section complications-section">
              <h4><i class="fas fa-exclamation-triangle"></i> {{localize "AOA.LifeEvent.Complications"}}</h4>
              <ul class="complications-list">
                {{#each system.complications}}
                <li class="complication-item complication-{{type}}">
                  <span class="complication-type">{{localize (concat "AOA.LifeEvent.ComplicationType." (capitalize type))}}</span>
                  {{#if target}}<span class="complication-target">{{target}}</span>{{/if}}
                  {{#if severity}}<span class="complication-severity severity-{{severity}}">{{localize (concat "AOA.Severity." (capitalize severity))}}</span>{{/if}}
                  {{#if description}}<p class="complication-description">{{description}}</p>{{/if}}
                </li>
                {{/each}}
              </ul>
            </div>
            {{/if}}

            {{!-- LP Value --}}
            {{#if system.lpValue}}
            <div class="detail-section">
              <p class="lp-value-display"><strong>{{localize "AOA.LP.label"}}:</strong> {{system.lpValue}}</p>
            </div>
            {{/if}}
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}

    {{!-- Contacts --}}
    {{#if system.contacts.length}}
    <div class="contacts-section">
      <h3>{{localize "AOA.Section.Contacts"}}</h3>
      <ul class="contact-list">
        {{#each system.contacts}}
        <li class="contact-item">
          <span class="contact-name">{{name}}</span>
          {{#if source}}<span class="contact-source">({{source}})</span>{{/if}}
          {{#if description}}<p class="contact-description">{{description}}</p>{{/if}}
        </li>
        {{/each}}
      </ul>
    </div>
    {{/if}}
  </div>

  {{!-- ============================================ --}}
  {{!-- PASSIONS TAB --}}
  {{!-- ============================================ --}}
  <div class="tab profile-tab-content {{#if (eq profileTab 'passions')}}active{{/if}}" data-tab="passions" data-group="profile">

    <section class="passions-content-section">
      <h3>{{localize "AOA.Section.Passions"}}</h3>

      <div class="passions-grid">
        <div class="passion motivation">
          <label>{{localize "AOA.Passions.Motivation"}}</label>
          {{#if isEditMode}}
          <input type="text" name="system.passions.motivation" value="{{system.passions.motivation}}" placeholder="{{localize 'AOA.Passions.MotivationHint'}}" />
          {{else}}
          <span class="passion-value">{{#if system.passions.motivation}}{{system.passions.motivation}}{{else}}<em>{{localize "AOA.Passions.MotivationHint"}}</em>{{/if}}</span>
          {{/if}}
        </div>

        <div class="passion nature">
          <label>{{localize "AOA.Passions.Nature"}}</label>
          {{#if isEditMode}}
          <input type="text" name="system.passions.nature" value="{{system.passions.nature}}" placeholder="{{localize 'AOA.Passions.NatureHint'}}" />
          {{else}}
          <span class="passion-value">{{#if system.passions.nature}}{{system.passions.nature}}{{else}}<em>{{localize "AOA.Passions.NatureHint"}}</em>{{/if}}</span>
          {{/if}}
        </div>

        <div class="passion allegiance">
          <label>{{localize "AOA.Passions.Allegiance"}}</label>
          {{#if isEditMode}}
          <input type="text" name="system.passions.allegiance" value="{{system.passions.allegiance}}" placeholder="{{localize 'AOA.Passions.AllegianceHint'}}" />
          {{else}}
          <span class="passion-value">{{#if system.passions.allegiance}}{{system.passions.allegiance}}{{else}}<em>{{localize "AOA.Passions.AllegianceHint"}}</em>{{/if}}</span>
          {{/if}}
        </div>
      </div>
    </section>

    {{!-- Fervor Tracker --}}
    <div class="fervor-tracker">
      <label>{{localize "AOA.Fervor.Title"}}</label>
      <div class="fervor-pips">
        {{#times 5}}
        <span class="fervor-pip {{#if (lt this ../system.fervor.current)}}filled{{/if}}" data-pip="{{this}}" data-action="setFervor"></span>
        {{/times}}
      </div>
    </div>
  </div>

  {{!-- ============================================ --}}
  {{!-- ADVANCEMENT TAB --}}
  {{!-- ============================================ --}}
  <div class="tab profile-tab-content {{#if (eq profileTab 'advancement')}}active{{/if}}" data-tab="advancement" data-group="profile">

    <div class="advancement-content-section">
      <h3>{{localize "AOA.Section.Experience"}}</h3>
      <div class="advancement-fields">
        {{!-- Legacy Points (shown if not complete or has LP) --}}
        {{#if (or (not system.creation.complete) system.advancement.lp.earned)}}
        <div class="lp-tracking">
          <label>{{localize "AOA.LP.label"}}</label>
          <div class="lp-values">
            <span class="lp-earned" title="{{localize 'AOA.LP.Earned'}}">
              {{localize "AOA.LP.Earned"}}: {{system.advancement.lp.earned}}
            </span>
            <span class="lp-spent" title="{{localize 'AOA.LP.Spent'}}">
              {{localize "AOA.LP.Spent"}}: {{system.advancement.lp.spent}}
            </span>
            <span class="lp-remaining {{#if (lt lpRemaining 0)}}negative{{/if}}" title="{{localize 'AOA.LP.Remaining'}}">
              {{localize "AOA.LP.Remaining"}}: {{lpRemaining}}
            </span>
          </div>
          {{#if isEditMode}}
          <div class="lp-edit-fields">
            <div class="lp-field">
              <label>{{localize "AOA.LP.Earned"}}</label>
              <input type="number" name="system.advancement.lp.earned" value="{{system.advancement.lp.earned}}" min="0" />
            </div>
            <div class="lp-field">
              <label>{{localize "AOA.LP.Spent"}}</label>
              <input type="number" name="system.advancement.lp.spent" value="{{system.advancement.lp.spent}}" min="0" />
            </div>
          </div>
          {{/if}}
        </div>
        {{/if}}

        {{!-- Experience Points --}}
        <div class="xp-tracking">
          <div class="xp-header">
            <label>{{localize "AOA.Advancement.XP.label"}}</label>
            <button type="button" class="xp-adjust-btn" data-action="adjustXP" title="{{localize 'AOA.Advancement.XP.Adjust'}}">
              <i class="fas fa-plus"></i>
              {{localize "AOA.Advancement.XP.Add"}}
            </button>
          </div>
          <div class="xp-display">
            <span class="xp-value {{#if (gte system.advancement.xp.current 1000)}}max-reached{{/if}}">{{system.advancement.xp.current}}</span>
            <span class="xp-total">({{localize "AOA.Advancement.XP.Total"}}: {{system.advancement.xp.total}})</span>
          </div>

          {{!-- XP Progress Bar towards 1000 --}}
          <div class="xp-progress-container">
            <div class="xp-progress-bar">
              <div class="xp-progress-fill" style="width: {{min (multiply (divide system.advancement.xp.current 1000) 100) 100}}%"></div>
            </div>
            <span class="xp-progress-label">{{system.advancement.xp.current}} / 1000</span>
          </div>

          {{!-- Purchase Advancement Button --}}
          <div class="advancement-purchase">
            {{#if (gte system.advancement.xp.current 1000)}}
            <button type="button" class="purchase-advancement-btn available" data-action="purchaseAdvancement">
              <i class="fas fa-level-up-alt"></i>
              {{localize "AOA.Advancement.Purchase"}}
              <span class="cost-badge">{{localize "AOA.Advancement.PurchaseCost"}}</span>
            </button>
            <p class="advancement-hint available">{{localize "AOA.Advancement.PurchaseAvailable"}}</p>
            {{else}}
            <button type="button" class="purchase-advancement-btn disabled" disabled>
              <i class="fas fa-lock"></i>
              {{localize "AOA.Advancement.Purchase"}}
              <span class="cost-badge">{{localize "AOA.Advancement.PurchaseCost"}}</span>
            </button>
            <p class="advancement-hint">{{localize "AOA.Advancement.PurchaseDisabled"}}</p>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>

  {{!-- ============================================ --}}
  {{!-- NOTES TAB --}}
  {{!-- ============================================ --}}
  <div class="tab profile-tab-content {{#if (eq profileTab 'notes')}}active{{/if}}" data-tab="notes" data-group="profile">

    <section class="notes-section">
      <h3><i class="fas fa-scroll"></i> {{localize "AOA.Section.Notes"}}</h3>
      {{#if isEditable}}
      <a class="toggle-editor-btn" data-action="toggleNotesEditor" title="{{localize 'AOA.Common.Edit'}}">
        <i class="fas fa-edit"></i>
      </a>
      {{/if}}
      <div class="notes-editor-container" data-field="system.notes">
        {{!-- View mode --}}
        <div class="notes-view">{{{enrichedNotes}}}</div>
        {{!-- Edit mode (hidden by default) --}}
        {{#if isEditable}}
        <div class="notes-edit hidden">
          <prose-mirror name="system.notes" value="{{source.system.notes}}" document-uuid="{{actor.uuid}}"></prose-mirror>
        </div>
        {{/if}}
      </div>
    </section>
  </div>

</section>
